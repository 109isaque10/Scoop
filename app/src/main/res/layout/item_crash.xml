<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/crash_container_padding">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/crash_icon_size"
        android:layout_height="@dimen/crash_icon_size"
        android:contentDescription="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/crash_container_padding"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/crash_container_padding"
                android:layout_marginRight="@dimen/crash_container_padding"
                android:layout_toLeftOf="@+id/time"
                android:maxLines="1"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/crash_header_size"/>

            <tk.wasdennnoch.scoop.view.RelativeTimeTextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:textColor="@color/text_disabled_light"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/crash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_secondary_light"/>

    </LinearLayout>

</LinearLayout>